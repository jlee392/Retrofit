<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oose.routemaker">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Logistics.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label ="@string/app_name" android:name=".Logistics.SignupActivity"> </activity>
        <activity android:label="@string/app_name" android:name=".NewsFeedActivity"> </activity>
        <activity android:label="@string/app_name" android:name=".Logistics.SettingActivity"> </activity>
        <activity android:label="@string/app_name" android:name=".CreateTrip.CreateTripActivity"> </activity>
        <activity android:label="@string/app_name" android:name=".CreateTrip.SelectCityActivity"> </activity>
        <activity android:label="@string/app_name" android:name=".CreateTrip.SelectDateTimeActivity"> </activity>
        <activity android:label="@string/app_name" android:name=".CreateTrip.SelectSitesActivity"> </activity>
        <activity android:label="@string/app_name" android:name=".CreateTrip.SelectTimeActivity"> </activity>
        <activity android:label="@string/app_name" android:name=".CreateTrip.SelectSitesSitesActivity"> </activity>
        <activity android:name=".Pop" android:theme="@style/AppTheme.CustomTheme"></activity>

        <service android:name=".RssService" />

    </application>

</manifest>
